---
import DownloadButton from '../ui/DownloadButton.svelte';
import MacDownloadButton from '../ui/MacDownloadButton.svelte';
---

<section id="download" class="download-section">
	<div class="container">
		<div class="download-content">
			<h2 class="download-title">Ready to Control Your Mac?</h2>
			<p class="download-subtitle">Download Mac Remote Controller now and experience seamless remote control</p>
			<div class="download-button-container">
				<DownloadButton url="https://play.google.com/store/apps/details?id=com.macremote" size="large" client:idle />
				<MacDownloadButton url="/files/MacRCDesktop_v1.3.dmg" size="large" client:idle />
			</div>
			<p class="download-note">Available now on Google Play Store â€¢ Mac companion app available for download</p>
		</div>
	</div>
</section>

<style>
	.download-section {
		padding: 6rem 2rem;
		background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
		backdrop-filter: blur(10px);
	}
	
	.container {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.download-content {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.download-title {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1rem;
		color: white;
	}
	
	.download-subtitle {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2.5rem;
	}
	
	.download-button-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}
	
	@media (min-width: 640px) {
		.download-button-container {
			flex-direction: row;
		}
	}
	
	.download-note {
		color: rgba(255, 255, 255, 0.6);
		font-size: 0.875rem;
	}
</style>

