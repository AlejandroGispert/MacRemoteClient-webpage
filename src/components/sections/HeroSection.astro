---
import DownloadButton from '../ui/DownloadButton.svelte';
import MacDownloadButton from '../ui/MacDownloadButton.svelte';
---

<section class="hero-section">
	<div class="hero-content">
		<div class="hero-left">
			<img 
				src="/macremoteapp.png" 
				alt="Mac Remote Controller" 
				class="hero-logo"
				width="120"
				height="120"
				loading="eager"
				fetchpriority="high"
				decoding="async"
			/>
			<h1 class="hero-title">Mac Remote Controller</h1>
			<p class="hero-subtitle">Seamlessly integrate your Mac with your Android phone. The perfect companion app for remote Mac features.</p>
			<div class="hero-buttons">
				<DownloadButton url="https://play.google.com/apps/testing/com.gispert.macremotecontrollerandroid" size="large" client:idle />
				<MacDownloadButton url="/files/MacRCDesktop_v1.5.dmg" size="large" client:idle />
			</div>
		</div>
		<div class="hero-right">
			<div class="phone-frame">
				<div class="screenshot-container">
					<img 
						src="/appscreen.jpg" 
						alt="Mac Remote Controller App Screenshot" 
						class="hero-screenshot active"
						id="screenshot-1"
						width="280"
						height="600"
						loading="lazy"
						decoding="async"
					/>
					<img 
						src="/appscreen2.jpg" 
						alt="Mac Remote Controller App Screenshot 2" 
						class="hero-screenshot"
						id="screenshot-2"
						width="280"
						height="600"
						loading="lazy"
						decoding="async"
					/>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero-section {
		padding: 4rem 2rem;
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.hero-content {
		max-width: 1200px;
		width: 100%;
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		align-items: center;
	}
	
	@media (min-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr 1fr;
		}
	}
	
	.hero-left {
		text-align: center;
	}
	
	@media (min-width: 768px) {
		.hero-left {
			text-align: left;
		}
	}
	
	.hero-logo {
		width: 120px;
		height: 120px;
		margin: 0 auto 2rem;
		border-radius: 1rem;
		object-fit: cover;
	}
	
	@media (min-width: 768px) {
		.hero-logo {
			margin: 0 0 2rem 0;
		}
	}
	
	.hero-title {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1.2;
	}
	
	@media (min-width: 768px) {
		.hero-title {
			font-size: 4rem;
		}
	}
	
	.hero-subtitle {
		font-size: 1.25rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
		line-height: 1.6;
	}
	
	.hero-buttons {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}
	
	@media (min-width: 768px) {
		.hero-buttons {
			flex-direction: row;
			justify-content: flex-start;
		}
	}
	
	.hero-right {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	
	.phone-frame {
		background: rgba(0, 0, 0, 0.9);
		border-radius: 2.5rem;
		padding: 4px;
		border: 8px solid #6366f1;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
		display: inline-block;
		width: fit-content;
	}
	
	.screenshot-container {
		position: relative;
		width: 280px;
		height: 600px;
		overflow: hidden;
		border-radius: 2rem;
	}
	
	.hero-screenshot {
		position: absolute;
		top: 0;
		left: 0;
		width: 280px;
		height: 600px;
		border-radius: 2rem;
		display: block;
		object-fit: cover;
		opacity: 0;
		transform: translateX(100%);
		transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1), transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
		pointer-events: none;
		will-change: transform, opacity;
	}
	
	.hero-screenshot.active {
		opacity: 1;
		transform: translateX(0);
		pointer-events: auto;
		z-index: 1;
	}
	
	.hero-screenshot.swiping-out {
		opacity: 0;
		transform: translateX(-100%);
		z-index: 0;
	}
	
	.hero-screenshot.swiping-in {
		opacity: 1;
		transform: translateX(0);
		z-index: 2;
	}
</style>

<script is:inline>
	(function() {
		function initScreenshotSwipe() {
			const screenshot1 = document.getElementById('screenshot-1');
			const screenshot2 = document.getElementById('screenshot-2');
			
			if (!screenshot1 || !screenshot2) {
				// Retry if elements aren't ready yet
				setTimeout(initScreenshotSwipe, 100);
				return;
			}
			
			let currentScreenshot = 1;
			let intervalId = null;
			
			function switchScreenshot() {
				if (currentScreenshot === 1) {
					// Swipe out screenshot 1, swipe in screenshot 2
					screenshot1.classList.remove('active');
					screenshot1.classList.add('swiping-out');
					
					setTimeout(() => {
						screenshot2.classList.remove('swiping-out');
						screenshot2.classList.add('swiping-in', 'active');
						screenshot1.classList.remove('swiping-out');
						currentScreenshot = 2;
					}, 50);
				} else {
					// Swipe out screenshot 2, swipe in screenshot 1
					screenshot2.classList.remove('active');
					screenshot2.classList.add('swiping-out');
					
					setTimeout(() => {
						screenshot1.classList.remove('swiping-out');
						screenshot1.classList.add('swiping-in', 'active');
						screenshot2.classList.remove('swiping-out', 'swiping-in');
						currentScreenshot = 1;
					}, 50);
				}
			}
			
			// Start the transition after 3 seconds
			setTimeout(() => {
				switchScreenshot();
				// Continue switching every 5 seconds
				intervalId = setInterval(switchScreenshot, 5000);
			}, 3000);
		}
		
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initScreenshotSwipe);
		} else {
			initScreenshotSwipe();
		}
	})();
</script>

