<style>
	.legal-page {
		padding: 2rem 1rem;
		min-height: 100vh;
	}

	.container {
		max-width: 800px;
		margin: 0 auto;
	}

	.legal-header {
		margin-bottom: 3rem;
		text-align: center;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		padding-bottom: 2rem;
	}

	.legal-header h1 {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.last-updated {
		color: rgba(255, 255, 255, 0.6);
		font-size: 0.875rem;
	}

	.legal-content {
		line-height: 1.8;
	}

	.legal-content section {
		margin-bottom: 3rem;
	}

	.legal-content h2 {
		font-size: 1.75rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: white;
		margin-top: 2rem;
	}

	.legal-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
		color: rgba(255, 255, 255, 0.9);
	}

	.legal-content p {
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 1rem;
	}

	.legal-content ul {
		color: rgba(255, 255, 255, 0.8);
		margin-left: 2rem;
		margin-bottom: 1rem;
	}

	.legal-content li {
		margin-bottom: 0.5rem;
	}

	@media (min-width: 768px) {
		.legal-page {
			padding: 4rem 2rem;
		}
	}
</style>

